# =========================================
# AI Agent Framework - Configuration Template
# =========================================
# Copy this file to .env and customize for your environment
# Or use agent.config.yaml for YAML-based configuration

# =========================================
# LLM Configuration
# =========================================

# LLM Provider: ollama, openai_like, mock
LLM_PROVIDER=ollama

# Model name
LLM_MODEL=llama2

# API base URL
# For Ollama (local): http://localhost:11434
# For OpenAI: https://api.openai.com/v1
# For other services: your_api_endpoint
LLM_API_BASE=http://localhost:11434

# API Key (required for OpenAI and similar services, leave empty for Ollama)
LLM_API_KEY=

# Model temperature (0.0 = deterministic, 1.0 = creative)
LLM_TEMPERATURE=0.0

# Nucleus sampling parameter
LLM_TOP_P=1.0

# =========================================
# Agent Configuration
# =========================================

# Maximum number of tasks per plan
AGENT_MAX_TASKS=50

# Maximum conversation messages to keep in history
AGENT_MAX_HISTORY=100

# Task execution timeout (seconds)
AGENT_TASK_TIMEOUT=300

# Enable debug logging
AGENT_DEBUG=false

# =========================================
# Repository Configuration
# =========================================

# Directories to ignore during scanning
REPO_IGNORE_DIRS=.git,__pycache__,node_modules,.venv,venv,env

# Code file extensions to analyze
REPO_CODE_EXTENSIONS=.py,.js,.ts,.go,.java,.cpp,.c,.h

# =========================================
# API & Server Configuration
# =========================================

# API server host (0.0.0.0 for all interfaces, 127.0.0.1 for localhost only)
API_HOST=0.0.0.0

# API server port
API_PORT=8000

# Enable CORS (Cross-Origin Resource Sharing)
API_CORS_ENABLED=true

# Allowed CORS origins (comma-separated)
API_CORS_ORIGINS=*

# =========================================
# Database Configuration
# =========================================

# Database type: sqlite, postgresql, mysql
DB_TYPE=sqlite

# For SQLite: path to database file
DB_PATH=./data/agent.db

# For PostgreSQL/MySQL: database connection string
# DB_CONNECTION_STRING=postgresql://user:password@localhost:5432/agent_db

# Enable database migrations on startup
DB_AUTO_MIGRATE=true

# =========================================
# Authentication & Security
# =========================================

# JWT secret key (change this in production!)
JWT_SECRET_KEY=your-super-secret-key-change-me-in-production

# JWT expiration time (hours)
JWT_EXPIRATION_HOURS=24

# API key for authentication (alternative to JWT)
API_KEY=

# Enable authentication requirement
AUTH_ENABLED=false

# =========================================
# Logging Configuration
# =========================================

# Log level: DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_LEVEL=INFO

# Log to console
LOG_CONSOLE=true

# Log to file
LOG_FILE=false

# Log file path (if LOG_FILE=true)
LOG_FILE_PATH=./logs/agent.log

# =========================================
# Performance & Optimization
# =========================================

# Number of worker threads for concurrent task execution
WORKER_THREADS=4

# Enable caching
CACHE_ENABLED=true

# Cache TTL (seconds)
CACHE_TTL=3600

# =========================================
# Development Settings
# =========================================

# Reload server on file changes (dev mode)
AUTO_RELOAD=false

# Enable detailed error responses (dev mode)
DETAILED_ERRORS=false

# =========================================
# Docker/Container Configuration
# =========================================

# Docker image name
DOCKER_IMAGE_NAME=agent-ai

# Docker image tag
DOCKER_IMAGE_TAG=latest

# Container name
DOCKER_CONTAINER_NAME=agent-ai

# Data volume mount path (inside container)
DOCKER_DATA_PATH=/app/data
